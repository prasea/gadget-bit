<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
          <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
            <%= link_to root_path, class: 'd-flex align-items-center pb-3 text-white text-decoration-none' do %>
              <span class="fs-5 d-none d-sm-inline fw-bold">Store</span>
            <%end%>
            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start">
              <li class="nav-item">
                <%= link_to 'Dashboard', admin_root_path, class: 'nav-link align-middle px-0 text-white'%>
              </li>
              <li class="nav-item">
                <%= link_to 'Products', admin_products_path, class: 'nav-link align-middle px-0 text-white'%>
              </li>
              <li class="nav-item">
                <%= link_to 'Categories', admin_categories_path, class: 'nav-link align-middle px-0 text-white'%>
              </li>
              <li class="nav-item">
                <%= link_to 'Orders', admin_orders_path, class: 'nav-link align-middle px-0 text-white'%>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, data: {turbo_method: :delete},  class: 'nav-link align-middle px-0 text-white'%>
              </li>
            </ul>
          </div>
        </div>
        <div class="col py-3">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
