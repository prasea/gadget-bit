<div class="container mt-5">
  <div class="row">
    <% if @orders.present? %>
      <h1 class="text-center mb-5">My Orders</h1>
      <% @orders.each do |order| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <p class="card-text">Ordered Date: <%= order.created_at.to_date %></p>
              <p class="card-text">Total Products: <%= order.order_products.size %></p>
              <%= link_to "View Details", order_show_path(order), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h1 class="text-center mb-5">No Orders Yet !</h1>
      <%= link_to "Go back shopping", root_path, class:"btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
