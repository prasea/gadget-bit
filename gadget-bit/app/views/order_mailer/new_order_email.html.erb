<p>Hi Admin,</p>
<p>A new order has been placed.</p>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_products.each do |cart_item| %>
      <tr>
        <td><%= cart_item.product.name %></td>
        <td><%= cart_item.quantity %></td>
        <td>Rs. <%= cart_item.product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>Total: Rs. <%= @order.total %></p>
