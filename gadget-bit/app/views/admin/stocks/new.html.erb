<div class="container">
  <h1 class="font-bold text-4xl">New stock</h1>
  <%= form_with(model: [:admin, @product, @stock]) do |form| %>
    <% if @stock.errors.any? %>
      <div id="error_explanation" class="alert alert-danger mt-3">
        <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>
        <ul>
          <% @stock.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :quantity, class: "form-label" %>
      <%= form.number_field :quantity, class: "form-control", placeholder: "Enter quantity" %>
    </div>
    <%= form.submit "Save", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back to Edit product", edit_admin_product_path(@product), class: "btn btn-secondary mt-3" %>
</div>
